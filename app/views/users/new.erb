<div class="single-medium-column">
    <div class="card medium-column padded-card">
        <h1 class="card-item">Signup</h1>
        <form action="/users" method="post">
            <div class="form-item">
                <label class="text-label"  for="username">Username</label>
                <input class="text-input login-text" id="username" type="text" name="username" required>
            </div>

            <div class="form-item">
                <label class="text-label" for="password">Password</label>
                <input class="text-input login-text" id="password" type="password" name="password" required>
            </div>

            <div class="form-item">
                <label class="text-label"  for="email">Email</label>
                <input class="text-input login-text" id="email "type="email" name="email" required>
            </div>

            <input class="action-link" type="submit" value="Signup">
        </form>
    </div>
</div>